<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include
        layout="@layout/view_simple_topbar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/margin_15"
        android:paddingTop="@dimen/margin_30"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_66"
            android:textSize="@dimen/textsize_14"
            android:text="克服电话："/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/orange"
            android:textSize="@dimen/textsize_20"
            android:text="400-9973-315"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/margin_15"
        android:paddingTop="@dimen/margin_10"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_66"
            android:textSize="@dimen/textsize_14"
            android:text="工作时间："/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_66"
            android:textSize="@dimen/textsize_16"
            android:text="周一至周日  08:30-17:00"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/margin_15"
        android:paddingTop="@dimen/margin_10"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_ShopPhoneLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_66"
            android:textSize="@dimen/textsize_14"
            android:text="海南站："/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_66"
            android:textSize="@dimen/textsize_16"
            android:text="0898-65759661   18976301290"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/margin_15"
        android:paddingTop="@dimen/margin_10"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_66"
            android:textSize="@dimen/textsize_14"
            android:text="工作时间："/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_66"
            android:textSize="@dimen/textsize_16"
            android:text="周一至周日  08:30-18:00"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_ShopPhoneCall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/height_100"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_16"
        android:padding="@dimen/margin_10"
        android:layout_marginLeft="@dimen/height_15"
        android:layout_marginRight="@dimen/height_15"
        android:paddingRight="@dimen/height_15"
        android:paddingTop="@dimen/height_15"
        android:background="@drawable/shape_orange5"
        android:gravity="center"
        android:text="致电客服"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/height_40"
        android:layout_marginLeft="@dimen/height_15"
        android:layout_marginRight="@dimen/height_15"
        android:padding="@dimen/margin_15"
        android:background="@color/line_gray"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/orange"
            android:textSize="@dimen/textsize_14"
            android:paddingRight="@dimen/height_15"
            android:paddingTop="@dimen/margin_5"
            android:text="温馨提示"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_66"
            android:textSize="@dimen/textsize_14"
            android:paddingRight="@dimen/height_15"
            android:paddingTop="@dimen/margin_5"
            android:gravity="center"
            android:text="微信公众号内搜索“雅森帮”可关注服务号。"/>
    </LinearLayout>

</LinearLayout>
