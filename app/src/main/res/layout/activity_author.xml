<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <include
        android:id="@+id/topbat_parent"
        layout="@layout/view_simple_topbar" />

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nsv_Author"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/topbat_parent">

        <LinearLayout
            android:id="@+id/ll_contentView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingLeft="@dimen/margin_15"
            android:paddingRight="@dimen/margin_15">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_50"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingBottom="@dimen/margin_15"
                android:paddingTop="@dimen/margin_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/textsize_14" />

                <TextView
                    android:id="@+id/tv_AuthorAccount_Left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="帐号:"
                    android:textColor="@color/black_66"
                    android:textSize="@dimen/textsize_14" />

                <TextView
                    android:id="@+id/tv_AuthorAccount_Right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:text="******"
                    android:textColor="@color/black_66"
                    android:textSize="@dimen/textsize_14" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_1"
                android:background="@color/line_c3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_50"
                android:layout_gravity="center"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/textsize_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="门店全称:"
                    android:textColor="@color/black_66"
                    android:textSize="@dimen/textsize_14" />

                <EditText
                    android:id="@+id/et_AuthorShopName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/margin_10"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:layout_marginRight="@dimen/height_35"
                    android:layout_marginTop="@dimen/margin_10"
                    android:background="@drawable/text_black_blackf7"
                    android:hint="无执照请填写“姓名（个人）” "
                    android:text=""
                    android:textColor="@color/black_66"
                    android:textColorHint="@color/black_99"
                    android:textSize="@dimen/textsize_14" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_1"
                android:background="@color/line_c3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_50"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingBottom="@dimen/margin_15"
                android:paddingTop="@dimen/margin_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/textsize_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="所在地区:"
                    android:textColor="@color/black_66"
                    android:textSize="@dimen/textsize_14" />
                <LinearLayout
                    android:id="@+id/ll_AuthorThree"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_AuthorThree"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/margin_15"
                        android:text="请选择所在区域"
                        android:textColor="@color/black_66"
                        android:textSize="@dimen/textsize_14" />

                    <ImageView
                        android:layout_width="@dimen/margin_20"
                        android:layout_height="@dimen/margin_20"
                        android:background="@mipmap/home_top_arrows" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_1"
                android:background="@color/line_c3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_50"
                android:layout_gravity="center"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/textsize_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收货地址:"
                    android:textColor="@color/black_66"
                    android:textSize="@dimen/textsize_14" />

                <EditText
                    android:id="@+id/et_AuthorAddress"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/margin_10"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:layout_marginRight="@dimen/height_35"
                    android:layout_marginTop="@dimen/margin_10"
                    android:background="@drawable/text_black_blackf7"
                    android:hint="请填写收货地址"
                    android:text=""
                    android:textColor="@color/black_66"
                    android:textColorHint="@color/black_99"
                    android:textSize="@dimen/textsize_14" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_1"
                android:background="@color/line_c3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_50"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/textsize_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="营业面积:"
                    android:textColor="@color/black_66"
                    android:textSize="@dimen/textsize_14" />
               <LinearLayout
                   android:id="@+id/ll_AuthorSinner"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="vertical"
                   android:layout_marginBottom="@dimen/margin_5"
                   android:layout_marginLeft="@dimen/margin_15"
                   android:layout_marginTop="@dimen/margin_5"
                   android:background="@drawable/text_orange_white0">

               </LinearLayout>
                <!--<FrameLayout-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:layout_marginBottom="@dimen/margin_5"-->
                    <!--android:layout_marginLeft="@dimen/margin_15"-->
                    <!--android:layout_marginTop="@dimen/margin_5"-->
                    <!--android:background="@drawable/text_orange_white0"-->
