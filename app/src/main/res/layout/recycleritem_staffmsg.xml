<?xml version="1.0" encoding="utf-8"?><!--cardCornerRadius：设置卡片边角的角度值--><!--cardElevation：设置卡片的阴影-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_40"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_StaffEmployeeAuth"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="@dimen/height_40"
        android:background="@drawable/shape_table"
        android:gravity="center"
        android:text="部门"
        android:textColor="@color/black_33"
        android:textSize="@dimen/textsize_14" />

    <TextView
        android:id="@+id/tv_StaffNumber"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="@dimen/height_40"
        android:background="@drawable/shape_table"
        android:gravity="center"
        android:text="手机号"
        android:textColor="@color/black_33"
        android:textSize="@dimen/textsize_14" />
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="@dimen/height_40"
        android:background="@drawable/shape_table"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:id="@+id/tv_StaffUpdata"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="更改"
            android:visibility="visible"
            android:textColor="@color/orange"
            android:textSize="@dimen/textsize_14" />
        <TextView
            android:id="@+id/tv_Staffdel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="删除"
            android:visibility="visible"
            android:textColor="@color/orange"
            android:textSize="@dimen/textsize_14" />
        <TextView
            android:id="@+id/tv_StaffInviteStatus"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="待确认"
            android:textColor="@color/black_33"
            android:textSize="@dimen/textsize_14" />
    </LinearLayout>
</LinearLayout>

