<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
    <include
        layout="@layout/view_simple_topbar"/>
    <android.support.design.widget.TabLayout
        android:id="@+id/tab_MakerShroffAccount"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_45"
        app:tabTextColor="@color/orange"
        app:tabSelectedTextColor="@color/orange"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_1"
        android:background="@color/line_c3"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_MakerShroffAccount"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>
    <RelativeLayout
        android:id="@+id/re_MakerFillFinish"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        <LinearLayout
            android:id="@+id/ll_MakerAccountTop"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_40"
            android:background="@color/orange_laba"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/height_15"
                android:layout_height="@dimen/height_15"
                android:layout_marginLeft="@dimen/margin_10"
                android:background="@mipmap/laba" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:scrollHorizontally="true"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_10"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text="收款账号修改请联系\n400-9973-315"
                android:textColor="@color/black_66"
                android:textSize="@dimen/textsize_16" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_MakerFirmFillFinish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_MakerAccountTop"
            android:paddingLeft="@dimen/height_20"
            android:paddingRight="@dimen/margin_20"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    style="@style/text_makeractivity_left"
                    android:text="单位名称：" />
                <TextView
                    style="@style/text_makeractivity_left"
                    android:text="纳税识别号：" />
                <TextView
                    style="@style/text_makeractivity_left"
                    android:text="注册地址：" />
                <TextView
                    style="@style/text_makeractivity_left"
                    android:text="注册电话：" />
                <TextView
                    style="@style/text_makeractivity_left"
                    android:text="开户银行：" />
                <TextView
                    style="@style/text_makeractivity_left"
                    android:text="银行账户：" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_MakerFirmFillFinishTitle"
                    style="@style/text_makeractivity_right"
                    android:text="****" />
                <TextView
                    android:id="@+id/tv_MakerFirmFillFinishNum"
                    style="@style/text_makeractivity_right"
                    android:text="****" />
                <TextView
                    android:id="@+id/tv_MakerFirmFillFinishAddress"
                    style="@style/text_makeractivity_right"
                    android:text="****" />
                <TextView
                    android:id="@+id/tv_MakerFirmFillFinishMobile"
                    style="@style/text_makeractivity_right"
                    android:text="****" />
                <TextView
                    android:id="@+id/tv_MakerFirmFillFinishBank"
                    style="@style/text_makeractivity_right"
                    android:text="****" />
                <TextView
                    android:id="@+id/tv_MakerFirmFillFinishBankNum"
                    style="@style/text_makeractivity_right"
                    android:text="****" />
            </LinearLayout>
        </LinearLayout>
        <!--个人-->
        <LinearLayout
            android:id="@+id/ll_MakerIvidualFillFinish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_MakerAccountTop"
            android:paddingLeft="@dimen/margin_20"
            android:paddingRight="@dimen/margin_20"
            android:visibility="gone"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView

                    style="@style/text_makeractivity_left"
                    android:text="开户名称：" />

                <TextView
                    android:id="@+id/tv_MakerIvidualFillFinishName"
                    style="@style/text_invoicespecialauditing_right"
                    android:text="请填写单位名称" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView

                    style="@style/text_makeractivity_left"
                    android:text="开户银行：" />

                <TextView
                    android:id="@+id/tv_MakerIvidualFillFinishBank"
                    style="@style/text_invoicespecialauditing_right"
                    android:text="****" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_makeractivity_left"
                    android:text="银行账户：" />
                <TextView
                    android:id="@+id/tv_MakerIvidualFillFinishBankNum"
                    style="@style/text_invoicespecialauditing_right"
                    android:text="****" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
