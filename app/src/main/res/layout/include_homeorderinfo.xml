<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/orderStateLinear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_7"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:lines="2"
        android:paddingBottom="@dimen/margin_10"
        android:paddingLeft="@dimen/margin_20"
        android:paddingRight="@dimen/margin_20"
        android:paddingTop="@dimen/margin_10"
        android:text="订单\n状态"
        android:textColor="@color/black_66"
        android:textSize="@dimen/textsize_16" />

    <View
        android:layout_width="@dimen/margin_1"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_10"
        android:background="@color/line_c3" />

    <ImageView
        android:id="@+id/orderImage"
        android:layout_width="@dimen/height_35"
        android:layout_height="@dimen/height_35"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/express_stateimage"
                android:layout_width="@dimen/margin_15"
                android:layout_height="@dimen/margin_15"
                android:background="@mipmap/daishouhuo" />

            <TextView
                android:id="@+id/express_stateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_3"
                android:text="XXX"
                android:textColor="@color/orange"
                android:textSize="@dimen/textsize_14" />

            <TextView
                android:id="@+id/orderHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_3"
                android:layout_weight="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="感谢您使用"
                android:textColor="@color/black_66"
                android:textSize="@dimen/textsize_14" />
        </LinearLayout>

        <TextView
            android:id="@+id/orderTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_3"
            android:layout_marginTop="@dimen/margin_3"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="正在加载中..."
            android:textColor="@color/black_66"
            android:textSize="@dimen/textsize_14" />
    </LinearLayout>

    <ImageView
        android:id="@+id/func_right"
        android:layout_width="@dimen/margin_15"
        android:layout_height="@dimen/margin_15"
        android:layout_marginLeft="@dimen/margin_15"
        android:layout_marginRight="@dimen/margin_15"
        android:background="@mipmap/home_top_arrows"
        android:contentDescription="@null"
        android:duplicateParentState="true" />
</LinearLayout>