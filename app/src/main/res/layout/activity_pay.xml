<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
    <include
        layout="@layout/view_simple_topbar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_50"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/height_15"
        android:orientation="horizontal"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_66"
            android:textSize="@dimen/textsize_14"
            android:text="支付方式："/>
        <TextView
            android:id="@+id/tv_PayMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/orange"
            android:textSize="@dimen/textsize_14"/>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_50"
        android:paddingLeft="@dimen/height_15"
        android:textColor="@color/black_66"
        android:textSize="@dimen/textsize_14"
        android:gravity="center_vertical"
        android:background="@color/black_f7"
        android:text="选择支付方式："/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rc_Pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/height_15"
        android:paddingRight="@dimen/height_15"
        android:background="@color/white">

    </android.support.v7.widget.RecyclerView>
    <TextView
        android:id="@+id/tv_PayExpireTime"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_50"
        android:paddingLeft="@dimen/height_15"
        android:textColor="@color/orange"
        android:textSize="@dimen/textsize_12"
        android:gravity="center_vertical"
        android:text="(请在%s前完成付款，否则订单将会取消)"/>

    <TextView
        android:id="@+id/tv_OkPay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_50"
        android:layout_margin="@dimen/height_15"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_14"
        android:background="@drawable/shape_orange5"
        android:text="确认付款"/>
</LinearLayout>
