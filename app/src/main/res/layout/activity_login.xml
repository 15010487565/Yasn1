<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true">
    <include
        layout="@layout/view_simple_topbar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/sobot_DIMEN_107PX"
        android:background="@drawable/shape_black_white"
        android:layout_margin="@dimen/margin_15"
        android:paddingLeft="@dimen/margin_10"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/margin_20"
            android:layout_height="@dimen/margin_20"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/makerphone"/>

        <EditText
            android:id="@+id/et_LoginAccount"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_15"
            android:background="@null"
            android:hint="请输入手机号/用户名"
            android:inputType="textVisiblePassword"
            android:digits="@string/password"
            android:textColor="@color/black_66"
            android:textColorHint="@color/black_99"
            android:textSize="@dimen/textsize_14" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/sobot_DIMEN_107PX"
        android:background="@drawable/shape_black_white"
        android:layout_marginLeft="@dimen/margin_15"
        android:layout_marginRight="@dimen/margin_15"
        android:paddingLeft="@dimen/margin_10"
        android:paddingRight="@dimen/margin_15"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/makerpws"/>
        <EditText
            android:id="@+id/et_LoginPassword"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_15"
            android:background="@null"
            android:inputType="textPassword"
            android:digits="@string/password"
            android:textColor="@color/black_66"
            android:textSize="@dimen/textsize_14"
            android:maxLength="16"
            android:textColorHint="@color/black_99"
            android:hint="请输入密码"/>
        <ImageView
            android:id="@+id/iv_LoginVisible"
            android:layout_width="@dimen/margin_20"
            android:layout_height="@dimen/margin_20"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/checkbox_unchecked"/>
        <TextView
            android:id="@+id/tv_LoginVisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_66"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_2"
            android:text="显示密码"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/sobot_DIMEN_107PX"
        android:background="@drawable/shape_black_white"
        android:layout_margin="@dimen/margin_15"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginBottom="@dimen/margin_10"
            android:background="@mipmap/yanzhengma"/>
        <EditText
            android:id="@+id/et_LoginCode"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/height_40"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_15"
            android:background="@null"
            android:inputType="textVisiblePassword"
            android:digits="@string/password"
            android:textColor="@color/black_66"
            android:textSize="@dimen/textsize_14"
            android:maxLength="4"
            android:textColorHint="@color/black_99"
            android:hint="请输入验证码"/>
        <ImageView
            android:id="@+id/iv_LoginCode"
            android:layout_width="100dp"
            android:layout_margin="@dimen/margin_5"
            android:layout_height="match_parent" />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_LoginOk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_16"
        android:padding="@dimen/margin_10"
        android:layout_marginLeft="@dimen/height_15"
        android:layout_marginRight="@dimen/height_15"
        android:paddingRight="@dimen/height_15"
        android:paddingTop="@dimen/height_15"
        android:background="@drawable/shape_orange5"
        android:gravity="center"
        android:text="登录"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_LoginForgetPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize_13"
            android:textColor="@color/black_33"
            android:padding="@dimen/height_15"
            android:text="忘记密码?"/>
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tv_LoginSms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize_13"
            android:textColor="@color/orange"
            android:padding="@dimen/height_15"
            android:text="短信登录"/>
        <TextView
            android:id="@+id/tv_LoginQuickRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize_13"
            android:textColor="@color/orange"
            android:padding="@dimen/height_15"
            android:text="快速注册"/>
    </LinearLayout>
</LinearLayout>
