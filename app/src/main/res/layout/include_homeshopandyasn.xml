<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_7"
    android:orientation="horizontal"
    android:paddingRight="@dimen/margin_7"
    android:paddingLeft="@dimen/margin_7">

    <LinearLayout
        android:id="@+id/ll_HomeOftensShop"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginRight="@dimen/margin_7"
        android:padding="@dimen/margin_5">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_10"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/shoplist"
                android:textColor="@color/black_33"
                android:textSize="@dimen/textsize_16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:background="@drawable/text_orange_white"
                android:paddingBottom="@dimen/margin_3"
                android:paddingLeft="@dimen/margin_5"
                android:paddingRight="@dimen/margin_5"
                android:paddingTop="@dimen/margin_3"
                android:text="点击查看"
                android:textColor="@color/orange"
                android:textSize="@dimen/textsize_14" />
        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/height_45"
            android:layout_height="@dimen/height_45"
            android:background="@mipmap/inventory" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_Yasnbang"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/margin_5">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_10"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="雅森帮"
                android:textColor="@color/black_33"
                android:textSize="@dimen/textsize_16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:background="@drawable/text_orange_white"
                android:paddingBottom="@dimen/margin_3"
                android:paddingLeft="@dimen/margin_5"
                android:paddingRight="@dimen/margin_5"
                android:paddingTop="@dimen/margin_3"
                android:text="点击查看"
                android:textColor="@color/orange"
                android:textSize="@dimen/textsize_14" />
        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/height_45"
            android:layout_height="@dimen/height_45"
            android:background="@mipmap/yasnbang" />
    </LinearLayout>
</LinearLayout>