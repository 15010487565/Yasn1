<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/meanage"
    android:layout_marginBottom="@dimen/margin_7">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_40"
        android:gravity="center_vertical"
        android:textColor="@color/black_33"
        android:textSize="@dimen/textsize_16"
        android:paddingLeft="@dimen/margin_10"
        android:background="@color/white"
        android:text="员工管理"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_1"
        android:layout_marginLeft="@dimen/margin_10"
        android:background="@color/line_c3"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/margin_10"
        android:paddingRight="@dimen/margin_10"
        android:background="@color/white">
        <LinearLayout
            android:id="@+id/ll_createstaff"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="@dimen/margin_10"
            android:paddingBottom="@dimen/margin_10"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/height_30"
                android:layout_height="@dimen/height_30"
                android:layout_marginBottom="@dimen/margin_5"
                android:background="@mipmap/createstaff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_3"
                android:text="@string/staff_create"
                android:textColor="@color/black_66"
                android:textSize="@dimen/textsize_14" />
        </LinearLayout>



        <LinearLayout
            android:id="@+id/ll_meanagestaff"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="@dimen/margin_10"
            android:paddingBottom="@dimen/margin_10">

            <ImageView
                android:layout_width="@dimen/height_30"
                android:layout_height="@dimen/height_30"
                android:layout_marginBottom="@dimen/margin_5"
                android:background="@mipmap/managestaff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/staff_message"
                android:textColor="@color/black_66"
                android:textSize="@dimen/textsize_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">
        </LinearLayout>

    </LinearLayout>
</LinearLayout>