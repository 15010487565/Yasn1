<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true">
    <include
        layout="@layout/view_simple_topbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/sobot_DIMEN_107PX"
        android:layout_marginLeft="@dimen/margin_15"
        android:layout_marginRight="@dimen/margin_15"
        android:layout_marginTop="@dimen/margin_15"
        android:background="@drawable/shape_black_white"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin_10">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/makerpws" />

        <EditText
            android:id="@+id/et_RegisterPws"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_15"
            android:layout_weight="1"
            android:background="@null"
            android:digits="@string/password"
            android:hint="6-16位字母、数字组合"
            android:inputType="textPassword"
            android:lines="1"
            android:maxLength="16"
            android:textColor="@color/black_33"
            android:textColorHint="@color/black_99"
            android:textSize="@dimen/textsize_14" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/sobot_DIMEN_107PX"
        android:background="@drawable/shape_black_white"
        android:layout_marginLeft="@dimen/margin_15"
        android:layout_marginRight="@dimen/margin_15"
        android:layout_marginTop="@dimen/margin_15"
        android:paddingLeft="@dimen/margin_10"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/makerpws"/>
        <EditText
            android:id="@+id/et_RegisterAgainPws"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_15"
            android:background="@null"
            android:inputType="textPassword"
            android:digits="@string/password"
            android:textColor="@color/black_33"
            android:textSize="@dimen/textsize_14"
            android:textColorHint="@color/black_99"
            android:lines="1"
            android:maxLength="16"
            android:hint="请再次输入密码"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_RegisterSelect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_15"
        android:layout_marginRight="@dimen/margin_15"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginBottom="@dimen/margin_10">
        <ImageView
            android:id="@+id/iv_RegisterSelect"
            android:layout_width="@dimen/height_20"
            android:layout_height="@dimen/height_20"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/checkbox_unchecked"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_2"
            android:layout_marginRight="@dimen/margin_15"
            android:textColor="@color/black_66"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/textsize_16"
            android:text="显示密码"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_RegisterOk"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_45"
        android:gravity="center"
        android:layout_marginLeft="@dimen/sobot_DIMEN_36PX"
        android:layout_marginRight="@dimen/sobot_DIMEN_36PX"
        android:textColor="@color/white"
        android:background="@drawable/shape_orange5"
        android:layout_marginTop="@dimen/margin_30"
        android:textSize="@dimen/textsize_16"
        android:text="确定"/>
</LinearLayout>
