<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/topbar_left"
        android:layout_width="40dp"
        android:layout_height="@dimen/top_search_height"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:padding="@dimen/margin_10"
        android:orientation="horizontal" >
        <ImageView
            android:id="@+id/topbar_func_icon"
            android:layout_width="19dp"
            android:layout_height="36dp"
            android:background="@mipmap/icon_back_norma"
            android:contentDescription="@null"
            android:padding="13dp"
            android:scaleType="centerInside" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_Topsearch"
        android:layout_width="0dp"
        android:layout_height="@dimen/top_search_height"
        android:layout_marginRight="@dimen/margin_10"
        android:layout_weight="1"
        android:background="@drawable/shape_white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_Topsearch"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/home_search"
            android:paddingLeft="@dimen/margin_10"
            android:lines="1"
            android:textColor="@color/black_33"
            android:textSize="@dimen/textsize_serach"
            android:textColorHint="@color/black_66" />

        <TextView
            android:id="@+id/searchbutton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/shape_orange_right"
            android:gravity="center"
            android:paddingLeft="@dimen/height_20"
            android:paddingRight="@dimen/height_20"
            android:text="搜索"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_serach" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/topbar_right"
        android:layout_width="@dimen/top_search_height"
        android:layout_height="@dimen/top_search_height"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:padding="@dimen/margin_10"
        android:visibility="gone"
        android:orientation="horizontal" >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/service_white"
            android:contentDescription="@null"
            android:padding="13dp"
            android:scaleType="centerInside" />
    </LinearLayout>

</merge>