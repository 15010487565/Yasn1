<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:id="@+id/ll_AddressItem"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/height_35"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/margin_5"
        android:padding="@dimen/margin_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black_66"
            android:textSize="@dimen/textsize_14"
            android:text="收货人：" />

        <TextView
            android:id="@+id/tv_AddressName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="@color/black_66"
            android:textSize="@dimen/textsize_14"
            android:text="" />

        <TextView
            android:id="@+id/tv_AddressNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black_66"
            android:textSize="@dimen/textsize_14"
            android:layout_marginRight="@dimen/margin_10"
            android:text="******" />

    </LinearLayout>

    <!--<LinearLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:minHeight="@dimen/height_35"-->
        <!--android:orientation="horizontal"-->
        <!--android:padding="@dimen/margin_10">-->

        <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:gravity="center_vertical"-->
        <!--android:text="收货地址："-->
        <!--android:textColor="@color/black_66"-->
        <!--android:textSize="@dimen/textsize_14" />-->

        <TextView
            android:id="@+id/tv_AddressMsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/margin_10"
            android:paddingRight="@dimen/margin_20"
            android:paddingBottom="@dimen/margin_10"
            android:gravity="center_vertical"
            android:text="XX\t\t*********"
            android:textColor="@color/black_66"
            android:textSize="@dimen/textsize_14" />
    <!--</LinearLayout>-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_1"
        android:background="@color/line_c3"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/height_35"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin_10"
        android:paddingRight="@dimen/margin_20"
        android:paddingTop="@dimen/margin_5"
        android:paddingBottom="@dimen/margin_5"
        android:gravity="center_vertical">
        <LinearLayout
            android:id="@+id/ll_AddressSelect"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingRight="@dimen/margin_10">

            <ImageView
                android:id="@+id/iv_AddressSelect"
                android:layout_width="@dimen/height_20"
                android:layout_height="@dimen/height_20" />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_AddressSetting"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="默认地址"
            android:paddingTop="@dimen/margin_5"
            android:paddingBottom="@dimen/margin_5"
            android:textColor="@color/black_66"
            android:textSize="@dimen/textsize_14" />

        <TextView
            android:id="@+id/tv_AddressDet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_25"
            android:background="@drawable/shape_oranger_white5"
            android:text="删除"
            android:textColor="@color/orange"
            android:textSize="@dimen/textsize_14" />

        <TextView
            android:id="@+id/tv_AddressUpdata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="@drawable/shape_oranger_white5"
            android:text="编辑"
            android:textColor="@color/orange"
            android:textSize="@dimen/textsize_14" />

    </LinearLayout>
</LinearLayout>