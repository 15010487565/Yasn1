<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">
    <include
        layout="@layout/view_simple_topbar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/margin_30"
        android:paddingLeft="@dimen/margin_20"
        android:paddingBottom="@dimen/height_30"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize_14"
            android:textColor="@color/black_66"
            android:text="选择角色"/>

        <CheckBox
            android:id="@+id/cb_purchase"
            android:button="@drawable/cb_staffcreate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/margin_5"
            android:layout_marginLeft="@dimen/margin_30"
            android:textColor="@color/black_66"
            android:textSize="@dimen/textsize_14"
            android:text="采购部"/>
        <CheckBox
            android:id="@+id/cb_finance"
            android:button="@drawable/cb_staffcreate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_30"
            android:paddingLeft="@dimen/margin_5"
            android:textColor="@color/black_66"
            android:textSize="@dimen/textsize_14"
            android:text="财务部"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/margin_20"
        android:paddingRight="@dimen/margin_20"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_StaffCreateNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize_14"
            android:textColor="@color/black_66"
            android:text="手机号"/>
        <EditText
            android:id="@+id/et_StaffCreateNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_30"
            android:background="@drawable/text_black_blackf7_create"
            android:textSize="@dimen/textsize_14"
            android:textColor="@color/black_66"
            android:textColorHint="@color/black_99"
            android:hint="请输入手机号"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black_99"
        android:textSize="@dimen/textsize_12"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginLeft="@dimen/margin_20"
        android:text="请输入有效的手机号码，做为员工登录时的帐号"/>
    <TextView
        android:id="@+id/tv_StaffCreate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_orange2"
        android:textSize="@dimen/textsize_16"
        android:textColor="@color/white"
        android:gravity="center"
        android:padding="@dimen/margin_10"
        android:layout_marginTop="@dimen/height_100"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_20"
        android:text="创建"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black_99"
        android:textSize="@dimen/textsize_12"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_20"
        android:text="选择好角色后，我们会给被邀请的员工发送邀请通知，并需要让员工进行一次确认。"/>
</LinearLayout>
