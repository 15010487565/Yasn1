<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:id="@+id/ll_OrderExpressItem"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/margin_10">

        <TextView
            android:id="@+id/tv_OrderExpressTopTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0000-00-00"
            android:textColor="@color/black_66"
            android:textSize="@dimen/textsize_14" />

        <TextView
            android:id="@+id/tv_OrderExpressBelowTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00:00"
            android:textColor="@color/black_33"
            android:textSize="@dimen/textsize_16" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <!--<TextView-->
            <!--android:id="@+id/tv_OrderExpressTopLine"-->
            <!--android:layout_width="@dimen/margin_2"-->
            <!--android:layout_height="0dp"-->
            <!--android:layout_weight="1"-->
            <!--android:background="@color/line_c3" />-->

        <ImageView
            android:id="@+id/iv_OrderExpressConter"
            android:layout_width="@dimen/height_15"
            android:layout_height="@dimen/height_15"
            android:layout_marginTop="@dimen/margin_20"
            android:background="@mipmap/order_express_top" />

        <TextView
            android:layout_width="@dimen/margin_2"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/line_c3" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_OrderExpressContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:textColor="@color/black_33"
        android:textSize="@dimen/textsize_14"
        android:padding="@dimen/margin_10"/>
</LinearLayout>