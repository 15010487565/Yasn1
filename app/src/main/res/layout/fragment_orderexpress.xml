<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/view_simple_topbar" />
    <TextView
        android:id="@+id/tv_ExpressLogiName"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_40"
        android:textSize="@dimen/textsize_14"
        android:background="@color/white"
        android:textColor="@color/black_33"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/margin_10"/>
    <TextView
        android:id="@+id/tv_ExpressLogiNo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_40"
        android:textSize="@dimen/textsize_14"
        android:textColor="@color/black_66"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/margin_10"
        android:background="@color/black_f7"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rc_OrderExpress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <include layout="@layout/include_nodata_error" />
</LinearLayout>