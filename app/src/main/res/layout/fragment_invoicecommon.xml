<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        layout="@layout/view_simple_topbar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_20"
                android:gravity="center_vertical"
                android:textSize="@dimen/textsize_16"
                android:textColor="@color/black_66"
                android:layout_marginLeft="@dimen/height_20"
                android:layout_marginTop="@dimen/height_40"
                android:text="发票内容"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="@dimen/textsize_14"
                android:textColor="@color/orange"
                android:layout_marginLeft="@dimen/height_20"
                android:layout_marginTop="@dimen/margin_10"
                android:background="@drawable/shape_oranger_white"
                android:paddingLeft="@dimen/margin_20"
                android:paddingRight="@dimen/margin_20"
                android:paddingTop="@dimen/margin_5"
                android:paddingBottom="@dimen/margin_5"
                android:text="明细"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/height_15"
                android:paddingRight="@dimen/height_15"
                android:layout_marginTop="@dimen/height_15"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height_40"
                    android:gravity="center"
                    android:text="*"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/textsize_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height_40"
                    android:textColor="@color/black_99"
                    android:gravity="center"
                    android:textSize="@dimen/textsize_14"
                    android:text="抬头："/>
                <EditText
                    android:id="@+id/et_Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/height_40"
                    android:padding="@dimen/margin_5"
                    android:textSize="@dimen/textsize_14"
                    android:textColor="@color/black_33"
                    android:textColorHint="@color/black_99"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:background="@drawable/edit_text_nostork_black"
                    android:hint="请填写准确的公司名称"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/height_15"
                android:paddingRight="@dimen/height_15"
                android:layout_marginTop="@dimen/height_15"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height_40"
                    android:gravity="center"
                    android:textColor="@color/orange"
                    android:visibility="invisible"
                    android:textSize="@dimen/textsize_14"
                    android:text="*"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height_40"
                    android:textColor="@color/black_99"
                    android:gravity="center"
                    android:textSize="@dimen/textsize_14"
                    android:text="税号："/>

                <EditText
                    android:id="@+id/et_InvoiceNum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_nostork_black"
                    android:minHeight="@dimen/height_40"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:padding="@dimen/margin_5"
                    android:textSize="@dimen/textsize_14"
                    android:textColor="@color/black_33"
                    android:textColorHint="@color/black_99"
                    android:hint="请填写纳税人识别号" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_40"
                android:textSize="@dimen/textsize_14"
                android:textColor="@color/black_99"
                android:layout_marginLeft="@dimen/height_20"
                android:layout_marginRight="@dimen/height_20"
                android:layout_marginTop="@dimen/height_40"
                android:text="发票在您收到货30天后通过平邮寄出，请注意查收 (注：内容不全默认为不索取发票)"/>
            <TextView
                android:id="@+id/tv_InvoiceCommon"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_40"
                android:gravity="center"
                android:textSize="@dimen/textsize_14"
                android:textColor="@color/white"
                android:background="@drawable/shape_orange5"
                android:layout_marginLeft="@dimen/height_20"
                android:layout_marginRight="@dimen/height_20"
                android:layout_marginTop="@dimen/margin_10"
                android:text="确定"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>