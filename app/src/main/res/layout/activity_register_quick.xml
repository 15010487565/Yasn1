<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true">
    <include
        layout="@layout/view_simple_topbar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/sobot_DIMEN_107PX"
        android:background="@drawable/shape_black_white"
        android:layout_margin="@dimen/margin_15"
        android:paddingLeft="@dimen/margin_10"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/shoujihao"/>
        <EditText
            android:id="@+id/et_RegisterQuickAccount"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_15"
            android:background="@null"
            android:inputType="phone"
            android:digits="1234567890"
            android:maxLength="11"
            android:textColor="@color/black_66"
            android:textSize="@dimen/textsize_14"
            android:lines="1"
            android:textColorHint="@color/black_99"
            android:hint="请输入手机号"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_RegisterQuickOk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_16"
        android:padding="@dimen/margin_10"
        android:layout_marginLeft="@dimen/sobot_DIMEN_36PX"
        android:layout_marginRight="@dimen/sobot_DIMEN_36PX"
        android:paddingRight="@dimen/sobot_DIMEN_36PX"
        android:paddingTop="@dimen/sobot_DIMEN_36PX"
        android:layout_marginTop="@dimen/height_120"
        android:background="@drawable/shape_orange5"
        android:gravity="center"
        android:text="@string/next"/>
</LinearLayout>
