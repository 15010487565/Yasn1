<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/line_gray"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
    <include
        layout="@layout/view_simple_topbar"/>
    <LinearLayout
        android:id="@+id/ll_MakerShareCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/height_40"
        android:orientation="vertical"
        android:background="@drawable/shape_black_white">
        <LinearLayout
            android:id="@+id/ll_Popwindow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/margin_15"
            android:layout_marginBottom="@dimen/margin_15"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/maker"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textsize_22"
                android:textColor="@color/black_33"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/margin_3"
                android:text="雅森"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textsize_22"
                android:textColor="@color/orange_maker"
                android:textStyle="bold"
                android:text="车品宝"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_1"
            android:background="@color/line_c3"/>
        <ImageView
            android:id="@+id/iv_MakerCode"
            android:layout_width="@dimen/height_150"
            android:layout_height="@dimen/height_150"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/tv_MakerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize_14"
            android:textColor="@color/orange_maker"
            android:gravity="center"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginRight="@dimen/margin_20"
            android:text="***********************************************"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize_14"
            android:textColor="@color/black_66"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/margin_20"
            android:text="邀请您注册"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textsize_14"
        android:textColor="@color/black_66"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/margin_20"
        android:text="长按二维码颗分享或保存图片"/>
</LinearLayout>
