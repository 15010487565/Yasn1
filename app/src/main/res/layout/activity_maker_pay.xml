<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
    <include
        layout="@layout/view_simple_topbar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/height_20"
        android:layout_marginLeft="@dimen/height_20"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize_15"
            android:textColor="@color/black_66"
            android:text="支付金额："/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize_18"
            android:textColor="@color/orange"
            android:text="￥1.00"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_marginLeft="@dimen/height_20"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize_15"
            android:textColor="@color/black_66"
            android:visibility="invisible"
            android:text="支付金额："/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize_15"
            android:textColor="@color/black_99"
            android:text="（支付成功后将不可退还）"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_MakerPayAgreement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_20"
        android:layout_marginLeft="@dimen/height_20"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_MakerPaySelectAgreement"
            android:layout_width="@dimen/margin_20"
            android:layout_height="@dimen/margin_20"
           android:background="@mipmap/checkbox_unchecked"/>
        <TextView
            android:id="@+id/tv_MakerPaySelectAgreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize_15"
            android:textColor="@color/black_66"
            android:paddingLeft="@dimen/margin_5"
            android:text="同意"/>
        <TextView
            android:id="@+id/tv_MakerPayAgreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize_15"
            android:textColor="@color/orange"
            android:layout_marginLeft="@dimen/margin_5"
            android:text="《创客协议》"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_50"
        android:paddingLeft="@dimen/height_15"
        android:textColor="@color/black_66"
        android:textSize="@dimen/textsize_14"
        android:gravity="center_vertical"
        android:background="@color/black_f7"
        android:text="选择支付方式："/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rc_MakerPay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/height_15"
        android:paddingRight="@dimen/height_15"
        android:background="@color/white">

    </android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/tv_MakerPay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_50"
        android:layout_marginLeft="@dimen/height_15"
        android:layout_marginRight="@dimen/margin_15"
        android:layout_marginTop="@dimen/height_80"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_14"
        android:background="@drawable/shape_orange5"
        android:text="确认付款"/>
</LinearLayout>
