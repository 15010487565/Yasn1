<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        layout="@layout/view_simple_topbar"/>
    <TextView
        android:id="@+id/tv_topExpressNum"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/margin_10"
        android:background="@color/black_f7"
        android:layout_height="@dimen/height_40"
        android:textSize="@dimen/textsize_14"
        android:textColor="@color/orange"
        />
    <android.support.design.widget.TabLayout
        android:id="@+id/tab_OrderExpress"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_45"
        app:tabMode="scrollable"
        app:tabIndicatorColor="@color/orange"
        app:tabSelectedTextColor="@color/orange">
    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_OrderExpress"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <TextView
        android:id="@+id/tv_OrderExpressNull"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/black_33"
        android:textSize="@dimen/textsize_14"
        android:text="暂无物流信息，请稍后查询！"/>
</LinearLayout>
