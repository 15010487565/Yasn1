<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_search"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/top_bar_background"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/margin_13"
    android:paddingRight="@dimen/margin_13"
    android:paddingBottom="@dimen/top_search_padding"
    android:paddingTop="@dimen/top_search_padding"
    android:gravity="center_vertical">

    <LinearLayout
        android:id="@+id/tv_ClassifyTopSearch"
        android:layout_width="0dp"
        android:layout_height="@dimen/top_search_height"
        android:layout_weight="1"
        android:background="@drawable/shape_white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/home_search"
            android:paddingLeft="@dimen/margin_10"
            android:lines="1"
            android:textColor="@color/black_33"
            android:textSize="@dimen/textsize_serach"
            android:textColorHint="@color/black_66" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/shape_orange_right"
            android:gravity="center"
            android:paddingLeft="@dimen/height_20"
            android:paddingRight="@dimen/height_20"
            android:text="搜索"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_serach" />
    </LinearLayout>


</LinearLayout>