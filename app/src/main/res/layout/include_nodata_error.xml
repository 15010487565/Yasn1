<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/ll_Error"
    android:gravity="center_horizontal"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/height_60"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="@dimen/height_80"
            android:layout_height="@dimen/margin_1dp"
            android:background="@color/line_c3"
            android:layout_marginRight="@dimen/margin_20"/>
        <ImageView
            android:id="@+id/iv_Error"
            android:layout_width="@dimen/height_60"
            android:layout_height="@dimen/height_60"
            android:src="@mipmap/order_error"/>
        <TextView
            android:layout_width="@dimen/height_80"
            android:layout_height="@dimen/margin_1dp"
            android:background="@color/line_c3"
            android:layout_marginLeft="@dimen/margin_20"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_ErrorHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10"
        android:textSize="@dimen/textsize_14"
        android:textColor="@color/black_99"
        android:text="暂无订单"/>
</LinearLayout>