<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@android:color/transparent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="9dp"
    android:paddingRight="9dp" >

        <Button
            android:id="@+id/btn1"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:background="@drawable/pop_bottom_menu_top_btn"
            android:text="拍照"
            android:textColor="#017AFF"
            android:textSize="21sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#DFDFE2" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:background="@drawable/pop_bottom_menu_bottom_btn"
            android:text="从相册选择"
            android:textColor="#017AFF"
            android:textSize="21sp" />

        <Button
            android:id="@+id/cancel"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/pop_bottom_menu_cancle_btn"
            android:text="取消"
            android:textColor="#017AFF"
            android:textSize="19sp"
            android:textStyle="bold" />

</LinearLayout>