<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@mipmap/makerregister"
    android:orientation="vertical">
    <include
        layout="@layout/view_simple_topbar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="@dimen/height_80"
                android:layout_height="@dimen/height_80"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/height_60"
                android:background="@mipmap/ic_launcher"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/height_40"
                android:layout_marginTop="@dimen/margin_5"
                android:textColor="@color/black_33"
                android:textSize="@dimen/textsize_16"
                android:text="@string/app_name"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/height_50"
                android:background="@drawable/shape_black_white"
                android:layout_marginLeft="@dimen/margin_15"
                android:layout_marginRight="@dimen/margin_15"
                android:padding="@dimen/margin_10"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/margin_20"
                    android:layout_height="@dimen/margin_20"
                    android:layout_gravity="center_vertical"
                    android:background="@mipmap/makercode"/>
                <EditText
                    android:id="@+id/et_MakerRegCode"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:background="@null"
                    android:inputType="phone"
                    android:digits="1234567890"
                    android:maxLength="6"
                    android:textColor="@color/black_33"
                    android:textSize="@dimen/textsize_14"
                    android:textColorHint="@color/black_99"
                    android:hint="请输入验证码"/>
                <TextView
                    android:layout_width="@dimen/margin_2"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:layout_marginRight="@dimen/margin_15"
                    android:layout_marginTop="@dimen/margin_3"
                    android:layout_marginBottom="@dimen/margin_3"
                    android:background="@color/orange"/>
                <TextView
                    android:id="@+id/tv_MakerRegGetCode"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/height_30"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:paddingLeft="@dimen/margin_15"
                    android:paddingRight="@dimen/margin_15"
                    android:paddingTop="@dimen/margin_5"
                    android:paddingBottom="@dimen/margin_5"
                    android:textColor="@color/white"
                    android:background="@drawable/shape_orange5"
                    android:textSize="@dimen/textsize_16"
                    android:text="重新获取"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_15"
                android:layout_marginRight="@dimen/margin_15"
                android:paddingTop="@dimen/margin_10"
                android:layout_marginBottom="@dimen/margin_10"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/black_66"
                    android:textSize="@dimen/textsize_14"
                    android:text="没收到短信？"/>
                <TextView
                    android:id="@+id/tv_MakerRegVoiceCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/textsize_14"
                    android:text="点击收听语音验证码(免费)"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/height_50"
                android:background="@drawable/shape_black_white"
                android:layout_marginLeft="@dimen/margin_15"
                android:layout_marginRight="@dimen/margin_15"
                android:padding="@dimen/margin_10"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@mipmap/makerpws"/>
                <EditText
                    android:id="@+id/et_MakerRegPws"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:background="@null"
                    android:inputType="textPassword"
                    android:digits="@string/password"
                    android:textColor="@color/black_33"
                    android:textSize="@dimen/textsize_14"
                    android:maxLength="16"
                    android:textColorHint="@color/black_99"
                    android:hint="请设置密码"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/height_50"
                android:background="@drawable/shape_black_white"
                android:layout_marginLeft="@dimen/margin_15"
                android:layout_marginRight="@dimen/margin_15"
                android:layout_marginTop="@dimen/margin_15"
                android:padding="@dimen/margin_10"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@mipmap/makerpws"/>
                <EditText
                    android:id="@+id/et_MakerRegAgainPws"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:background="@null"
                    android:inputType="textPassword"
                    android:digits="@string/password"
                    android:textColor="@color/black_33"
                    android:textSize="@dimen/textsize_14"
                    android:maxLength="16"
                    android:textColorHint="@color/black_99"
                    android:hint="请再次输入密码"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_MakerSelect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_15"
                android:layout_marginRight="@dimen/margin_15"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_marginBottom="@dimen/margin_10">
                <ImageView
                    android:id="@+id/iv_MakerSelect"
                    android:layout_width="@dimen/height_20"
                    android:layout_height="@dimen/height_20"
                    android:layout_gravity="center_vertical"
                    android:background="@mipmap/checkbox_unchecked"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_2"
                    android:layout_marginRight="@dimen/margin_15"
                    android:textColor="@color/black_66"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/textsize_16"
                    android:text="显示密码"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_MakerRegNext"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_45"
                android:gravity="center"
                android:layout_marginLeft="@dimen/margin_15"
                android:layout_marginRight="@dimen/margin_15"
                android:textColor="@color/white"
                android:background="@drawable/shape_orange5"
                android:layout_marginTop="@dimen/margin_30"
                android:textSize="@dimen/textsize_16"
                android:text="下一步"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
